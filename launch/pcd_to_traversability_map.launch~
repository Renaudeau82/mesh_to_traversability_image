<launch>

<!-- ===== Conversion to Gridmap and Save it in rosbag =================================== -->
    <node name="mesh_to_traversability_map_node" pkg="pkg_mesh_to_traversability_map" type="mesh_to_traversability_map_node" output="screen" >
      <remap from="mesh" to="voxblox_node/pcl_mesh"/>
      <param name="load_from_file" value="true" />
      <param name="file" value="/home/eth/mesh.ply"/>
      <param name="save_to_file" value="false" />
      <param name="verbose" value="true"/>
    </node>

<!-- ===== Traversability image to graph =================================== -->
<node name="traversability2graphGeneral" pkg="pkg_graph_general" type="mask2graphGeneral">
<remap from="/image_mask" to="/image_traversability"/>
<param name="delta" value="8"/>
<param name="path" value="/home/eth/graphe_traversability.txt"/> 
</node>

<!-- ===== RVIZ =================================== -->
<node name="rviz" pkg="rviz" type="rviz" args="-d $(find pkg_mesh_to_traversability_map)/rviz/load_pcd.rviz"/>

</launch>
